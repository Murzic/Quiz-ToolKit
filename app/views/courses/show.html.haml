
.panel.panel-default.col-md-offset-3.col-md-6
	%ol.breadcrumb
		%li= link_to "Courses", user_courses_path(current_user)
		%li.active Quizzes

	.panel-body
		= form_for [@course, @course.quizzes.build] do |f|
			.row
				.form
					.form-group.col-md-4
						= f.label :name, class: "sr-only"
						= f.text_field :name, class: "form-control"
					.col-md-8
						.button= f.submit "Create", class: "btn btn-default"

		.list-group
			- @quizzes.each do |quiz|
				.row
					.col-md-4= link_to quiz.name, quiz_path, class: "list-group-item"
					.col-md-8
						= link_to "destroy", quiz_path(quiz), method: :delete, class: "btn btn-default"


	

